# Masumi Payment Service Configuration
PAYMENT_SERVICE_URL=https://your-instance-of-masumi.up.railway.app/api/v1
PAYMENT_API_KEY=your_payment_api_key_here
SELLER_VKEY=your_seller_vkey_here
NETWORK=Preprod
AGENT_IDENTIFIER=your_agent_identifier_here

# Payment Amount Configuration (optional - defaults to no payment if not set)
PAYMENT_AMOUNT=10000000
PAYMENT_UNIT=lovelace

# Optional: Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# BGB Parser API Key (required for /api/v1/bgb/parse endpoint)
API_KEY=your_API_KEY_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MistralAI Configuration
MISTRAL_API_KEY=your_mistralai_api_key_here

# Database Configuration (PostgreSQL with pgvector)
# Railway format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://user:password@host:port/dbname

